@model AccountingForPotentiallyDangObj.Web.Models.PdoViewModel
@{

    ViewData["Title"] = "Potentially Danger Objects";
}
<div class="main-window">
    <h4 class="text-center">Регистрация потенциально опасных объектов</h4>
    <div class="">
        <div class="addNewForm">
            @*<form method="post" asp-action="AddNewPdo">*@
            @using (Html.BeginForm("CreatePdo", "Pdo", FormMethod.Post))
            {
                <div asp-validation-summary="ModelOnly" class=""></div>
                <table>
                    <tr>
                        <th>Номер журнала ПОО</th>
                        <th>Регистрационный номер ПОО</th>
                        <th>Тип ПОО</th>
                        <th>Дата регистрации</th>
                        <th colspan="2">Владелец, субъект ПБ</th>
                    </tr>

                    <tr>
                        <td>
                            @Html.DropDownList("journalNumber", ViewBag.JournalNumber as SelectList)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.RegistrationNumber)
                        </td>
                        <td>
                            @Html.DropDownList("abb", ViewBag.Abb as SelectList)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.DateOfRegistrationStringViewModel)
                            @Html.ValidationMessageFor(m => m.DateOfRegistrationStringViewModel)
                            <span asp-validation-for="DateOfRegistrationStringViewModel" class="text-danger"></span>
                        </td>
                       
                        <td class="weight_td" colspan="2">
                            @Html.DropDownList("subjectName", ViewBag.SubjectName as SelectList)
                        </td>
                    </tr>
                    <tr>
                        <th>Год изготовления ПОО</th>
                        <th>Год ввода в эксплуатацию ПОО</th>
                        <th>Нормативный срок службы</th>
                        <th>Марка, модель</th>
                        <th>Заводской номер</th>
                        <th>Изготовитель ПОО</th>
                    </tr>
                    <tr>
                        <td>
                            @Html.EditorFor(m => m.YearOfManufacture)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.YearOfCommissioning)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.ServiceLife)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.ModelName)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.SerialNumber)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.Manufacturer)
                        </td>
                    </tr>
                    <tr>
                        <th>Грузоподъемность, т</th>
                        <th>Скорость, м/с</th>
                        <th>Количество остановок</th>
                        <th>Вылет стрелы, м</th>
                        <th>Техническое состояние</th>
                        <th>Дата следующего ТО</th>
                        
                    </tr>
                    <tr>
                        <td>
                            @Html.EditorFor(m => m.CapacityString)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.SpeedString)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.NumberOfStops)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.ArrowDepartureString)
                        </td>
                        <td>
                            @Html.DropDownList("technicalConditionalName", ViewBag.TechnicalConditionalName as SelectList)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.InformationAboutTheTechnicalInspectionString)
                        </td>
                    </tr>
                    <tr>
                        <th colspan="2">Адрес установки ПОО</th>
                        <th>Место установки</th>
                        <th>Закрепленный инспектор</th>
                        <th>Дата следующего ТД</th>
                        <th>Дата последнего обследования</th>
                    </tr>
                    <tr>
                        <td colspan="2">
                            @Html.EditorFor(m => m.InstallationLocationAddress)
                        </td>
                        <td>
                            @Html.DropDownList("installationLocationName", ViewBag.InstallationLocationName as SelectList)
                        </td>
                        <td>
                            @Html.DropDownList("inspectorName", ViewBag.InspectorName as SelectList)
                        </td>
                        
                        <td>
                            @Html.EditorFor(m => m.InformationAboutTheTechnicalDiagnosticString)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.InformationAboutTheLastSurveyString)
                        </td>
                    </tr>
                    <tr>
                        <th colspan="6">Примечание</th>
                    </tr>
                    <tr>
                        <td colspan="6">
                            @Html.TextAreaFor(m => m.Note, 2, 25, null)
                        </td>
                    </tr>

                </table>

                <div class="div-buttons">
                    <div class="div-button">
                        <input class="button-link" type="submit" value="Зарегистрировать" />
                    </div>

                </div>

                @*</form>*@
            }
        </div>
    </div>




</div>