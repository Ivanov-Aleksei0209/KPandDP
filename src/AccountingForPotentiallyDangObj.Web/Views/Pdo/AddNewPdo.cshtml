@model AccountingForPotentiallyDangObj.Web.Models.PdoViewModel
@{

    ViewData["Title"] = "Potentially Danger Objects";
}
<div class="main-window">
    <h4 class="text-center">Регистрация потенциально опасных объектов</h4>
    <div class="">
        <div class="addNewPdoForm">
            @*<form method="post" asp-action="AddNewPdo">*@
            @using (Html.BeginForm("AddNewPdo", "Pdo", FormMethod.Post))
            {
                <table>
                    <tr>
                        <th>Номер журнала ПОО</th>
                        <th>Регистрационный номер ПОО</th>
                        <th>Тип ПОО</th>
                        <th>Дата регистрации</th>
                        <th>Зарегистрировал инспектор</th>
                        <th>Владелец, субъект ПБ</th>
                    </tr>

                    <tr>
                        <td>
                            @Html.DropDownList("journalNumberString", ViewBag.JournalNumber as SelectList)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.RegistrationNumber)
                        </td>
                        <td>
                            @Html.DropDownList("abb", ViewBag.Abb as SelectList)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.DateOfRegistrationString)
                        </td>
                        <td>
                            @Html.DropDownList("inspector", ViewBag.NameInspector as SelectList)
                        </td>
                        <td class="weight_td">
                            @Html.DropDownList("subject", ViewBag.NameSubject as SelectList)
                        </td>
                    </tr>
                    <tr>
                        <th>Год изготовления ПОО</th>
                        <th>Год ввода в эксплуатацию ПОО</th>
                        <th>Нормативный срок службы</th>
                        <th>Марка, модель</th>
                        <th>Заводской номер</th>
                        <th>Изготовитель ПОО</th>
                    </tr>
                    <tr>
                        <td>
                            @Html.EditorFor(m => m.YearOfManufacture)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.YearOfCommissioning)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.ServiceLife)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.Model)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.SerialNumber)
                        </td>
                        <td>
                            @Html.EditorFor(m => m.Manufacturer)
                        </td>
                    </tr>
                    
                    <tr>
                        <td>
                            @Html.TextArea("text", "0,5", 1, 5, null)
                        </td>
                        <td>
                            @Html.TextArea("text", "1,0", 1, 5, null)
                        </td>
                        <td>
                            @Html.TextArea("text", "9", 1, 5, null)
                        </td>
                        <td>
                            @Html.TextArea("text", "18", 1, 5, null)
                        </td>
                        <td>
                            @Html.TextArea("text", "20.03.2024", 1, 10, null)
                        </td>
                        <td>
                            @Html.TextArea("text", "Введите адрес установки ПОО", 1, 50, null)
                        </td>

                    </tr>
                    @*<tr>
                        <th colspan="2">Место установки</th>
                        <th>Закрепленный инспектор</th>
                        <th>Техническое состояние</th>
                        <th>Дата следующего ТД</th>
                        <th>Дата последнего обследования</th>
                    </tr>*@
                    <tr>
                        <td colspan="2">
                            @Html.DropDownList("installationLocation", ViewBag.NameInstallationLocation as SelectList)
                        </td>

                        <td>
                            @Html.DropDownList("inspector", ViewBag.NameInspector as SelectList)
                        </td>
                        <td>
                            @Html.DropDownList("technicalConditional", ViewBag.NameTechnicalConditional as SelectList)
                        </td>
                        <td>
                            @Html.TextArea("text", "20.03.2024", 1, 10, null)
                        </td>
                        <td>
                            @Html.TextArea("text", "20.03.2024", 1, 10, null)
                        </td>
                    </tr>

                </table>

                <div class="pdo-div-buttons">
                    <div class="pdo-div-button">
                        <input class="pdo-link" type="submit" value="Зарегистрировать" />
                    </div>

                </div>

                @*</form>*@
            }
        </div>
    </div>




</div>