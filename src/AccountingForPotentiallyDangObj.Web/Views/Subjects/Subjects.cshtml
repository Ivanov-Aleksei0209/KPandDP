@model IEnumerable<AccountingForPotentiallyDangObj.Web.Models.SubjectViewModel>
@{
    ViewData["Title"] = "Субъекты промышленной безопасности";
}
<div class="main-window">
    <h4 class="text-center">Справочник субъектов промышленной безопасности</h4>
    <div class="scroll-table">
        <div class="scroll-table-body">
            <table>
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.UNP)</th>
                        <th>@Html.DisplayNameFor(model => model.DepartmentalAffiliationName)</th>
                        <th>@Html.DisplayNameFor(model => model.postalAddress)</th>
                        <th>@Html.DisplayNameFor(model => model.phone)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><a href="/Subjects/UpdateSubject/@item.Id">@item.Name</a></td>
                            <td>@item.UNP</td>
                            <td>@item.DepartmentalAffiliationName</td>
                            <td>@item.postalAddress</td>
                            <td>@item.phone</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="updateObject">Для внесения изменения кликните по наименованию субъекта</div>
    </div>

    <div class="div-buttons">
        <div class="div-button">
            <a class="button-link" asp-area="" asp-controller="Subjects" asp-action="CreateSubject">Добавление нового субъекта</a>
        </div>        
    </div>
</div>
